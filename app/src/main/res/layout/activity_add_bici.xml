<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBici">

    <Button
        android:id="@+id/btnCrearBici"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginEnd="48dp"
        android:text="crear"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="430dp" />

    <EditText
        android:id="@+id/txtMarcaBici"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:hint="Marca"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncancelarBici"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="13dp"
        android:text="cancelar"
        app:layout_constraintEnd_toStartOf="@+id/btnCrearBici"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="430dp" />

    <EditText
        android:id="@+id/txtPulgadasBici"
        android:layout_width="319dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Pulgadas"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMarcaBici" />
</androidx.constraintlayout.widget.ConstraintLayout>